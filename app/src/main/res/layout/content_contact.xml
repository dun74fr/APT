<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.areastudio.jwterritorio.activities.ContactActivity"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="40dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:scaleType="fitStart"
        android:src="@drawable/logotipo_cep2018" />

    <TextView
        style="@style/AppTheme.TextSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/volunteer_atention"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_black_48dp"/>
        <TextView
            android:id="@+id/voluntaryphone"
            android:textSize="30sp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="69519308"
            />
    </LinearLayout>
    <TextView
        style="@style/AppTheme.TextSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/emergency"/>
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_black_48dp"/>
        <TextView
            android:id="@+id/emergencyphone"
            android:textSize="30sp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12345678"/>
    </LinearLayout>
</LinearLayout>
